<h1>Landlords</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Landlord</th>
            <th scope="col">Landlord Type</th>
            <th scope="col">E-mail Address</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Website</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Country</th>
        </tr>
    </thead>
    <tbody>
    <% @landlords.each do |landlord| %>
        <tr>
            <% if landlord.landlord_type === "Company" %>
                <th scope="col"><%= link_to landlord.company_name, controller: 'landlords', action: 'show', id: landlord.id %></th>
            <% else %>
                <th scope="col"><%= link_to landlord.full_name, controller: 'landlords', action: 'show', id: landlord.id %></th>
            <% end %>
            
            <th scope="col"><%= landlord.landlord_type %></th>
            <th scope="col"><%= landlord.email %></th>
            <th scope="col"><%= landlord.phone_number %></th>
            <th scope="col"><%= landlord.website %></th>
            <th scope="col"><%= landlord.city %></th>
            <th scope="col"><%= landlord.state.state %></th>
            <th scope="col"><%= landlord.country.country %></th>
        </tr>
    <% end %>
</table>

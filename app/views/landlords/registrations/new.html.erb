<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "landlords/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :landlord_type, style: "display: block" %>
    <%= f.select :landlord_type, ['Individual', 'Company'] %>
  </div>

  <div>
    <%= f.label :first_name, style: "display: block" %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name, style: "display: block" %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :company_name, style: "display: block" %>
    <%= f.text_field :company_name %>
  </div>

  <div>
    <%= f.label :phone_number, style: "display: block" %>
    <%= f.text_field :phone_number %>
  </div>

  <div>
    <%= f.label :website, style: "display: block" %>
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :street_address, style: "display: block" %>
    <%= f.text_field :street_address %>
  </div>

  <div>
    <%= f.label :city, style: "display: block" %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state_id, style: "display: block" %>
    <%= f.collection_select(:state_id, State.all.order(:state), :id, :state, include_blank: true) %>
  </div>

  <div>
    <%= f.label :country_id, style: "display: block" %>
    <%= f.collection_select(:country_id, Country.all.order(:country), :id, :country, include_blank: true) %>
  </div>

  <div>
    <%= f.label :zip_code, style: "display: block" %>
    <%= f.text_field :zip_code %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" class="btn btn-primary" %>
  </div>
<% end %>

<%= render "landlords/shared/links" %>

<h1>Landlord</h1>
<p>
    <strong>Landlord Type: </strong>
    <%= @landlord.landlord_type %>
</p>
<% if @landlord.company_name? %>
    <p>
        <strong>Company: </strong>
        <%= @landlord.company_name %>
    </p>
<% end %>

<% if @landlord.first_name? %>
    <p>
        <strong>First Name: </strong>
        <%= @landlord.first_name %>
    </p>
<% end %>
<% if @landlord.last_name? %>
    <p>
        <strong>Last Name: </strong>
        <%= @landlord.last_name %>
    </p>
<% end %>
<p>
    <strong>Phone Number: </strong>
    <%= @landlord.phone_number %>
</p>
<p>
    <strong>Website: </strong>
    <%= @landlord.website %>
</p>
<p>
    <strong>E-mail Address: </strong>
    <%= @landlord.email %>
</p>
<p>
    <strong>City: </strong>
    <%= @landlord.city %>
</p>
<p>
    <strong>State: </strong>
    <%= @landlord.state.state %>
</p>
<p>
    <strong>Country: </strong>
    <%= @landlord.country.country %>
</p>
<p>
    <strong>Zip Code: </strong>
    <%= @landlord.zip_code %>
</p>

<% if @properties.count > 0 %>

    <h2>Properties</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Street Address</th>
                <th scope="col">Unit</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip Code</th>
                <th scope="col">Country</th>
            </tr>
        </thead>
        <tbody>
            <% @properties.each do |property| %>
                <tr>
                    <td scope="col"><%= link_to property.street_address, controller: 'properties', action: 'show', id: property.id %></td>
                    <td scope="col"><%= property.unit_number %></td>
                    <td scope="col"><%= property.city %></td>
                    <td scope="col"><%= property.state.state %></td>
                    <td scope="col"><%= property.zip_code %></td>
                    <td scope="col"><%= property.country.country %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
<% end %>


<%= link_to "Back to Landlords", landlords_path, class: "btn btn-secondary" %>
